{
  "name": "protocol-core",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.43",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethers": "^5.5.4",
    "glob": "^10.2.1",
    "hardhat": "^2.8.3",
    "hardhat-deploy": "^0.10.4",
    "hardhat-gas-reporter": "^1.0.7",
    "husky": "^7.0.4",
    "js-yaml": "^4.1.0",
    "lint-staged": "^11.2.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.4.0",
    "typechain": "^8.1.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "erc721a": "^4.2.3"
  },
  "scripts": {
    "postinstall": "husky install",
    "deploy": "hardhat deploy",
    "deploy:e2e": "hardhat deploy --tags production",
    "compile": "hardhat compile",
    "start": "hardhat node --network hardhat",
    "start:e2e": "hardhat node --network hardhat  --tags test",
    "chain": "hardhat node --network hardhat --no-deploy",
    "verify": "hardhat etherscan-verify",
    "solhint": "solhint contracts/**/*.sol",
    "export-abi": "hardhat export",
    "test": "hardhat test --network hardhat",
    "coverage": "hardhat coverage --network hardhat",
    "coverage:ci": "hardhat coverage --network hardhat && mkdir -p .reports/smart-contracts-hardhat && cp -r ./coverage .reports/smart-contracts-hardhat",
    "forge-test": "forge test -vv",
    "forge-coverage": "forge coverage --report summary",
    "forge-coverage:ci": "forge coverage --report lcov && mkdir -p .reports/smart-contracts-foundry && cp ./lcov.info .reports/smart-contracts-foundry"
  },
  "lint-staged": {
    "**/*.{js,ts,md,sol,yaml}": "prettier --write"
  }
}
